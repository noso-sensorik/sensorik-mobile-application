<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/sample_main_layout"
    tools:context=".MainActivity">

    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test 1-2-3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_department"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_department"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:text="@string/label_department"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/spinner_department"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_job"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_job"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:text="@string/label_job"/>

            <Spinner
                android:id="@+id/spinner_job"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/placeholder_kittelflaschen_koppelung"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:text="PLATZHALTER KITTELFLASCHENKOPPLUNG"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_scrubbottle"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:text="@string/label_scrubbottle"/>

            <EditText
                android:id="@+id/input_scrubbottle_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />


        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:onClick="startTracking"
            android:paddingTop="15dp"
            android:text="@string/button_start" />

    </LinearLayout>

</LinearLayout>